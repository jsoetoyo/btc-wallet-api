{
  "name": "btc-wallet-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm install",
    "mongo": "mongod -f ~/mongodb/btc-wallet-api/mongod.conf & echo $! > .mongo_pid",
    "dev": "npm run mongo & nodemon btc-wallet-api.js",
    "mongo-stop": "kill $(cat .mongo_pid) && rm .mongo_pid",
    "start": "node btc-wallet-api.js"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "blockchain.info": "^2.10.1",
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "email-validator": "^1.0.7",
    "express": "~4.13.1",
    "jwt-simple": "^0.5.1",
    "mongoose": "^4.12.4",
    "morgan": "~1.6.1",
    "serve-favicon": "~2.3.0"
  }
}
